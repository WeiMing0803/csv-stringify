{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "."
  ],
  "exclude": [
    "node_modules/**/*",
    "dist"
  ]
}